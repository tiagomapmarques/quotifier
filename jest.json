{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{ts}"
  ],
  "coverageDirectory": "<rootDir>/coverage",
  "coverageReporters": [
    "json",
    "lcov"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "globals": {
    "ts-jest": {
      "tsConfigFile": "tsconfig.spec.json"
    }
  },
  "mapCoverage": true,
  "moduleFileExtensions": [
    "ts",
    "js"
  ],
  "testRegex": "^.+\\.spec\\.ts$",
  "transform": {
    "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
  }
}
